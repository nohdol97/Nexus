{
  "uid": "nexus-gateway",
  "title": "Nexus Gateway",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Requests per second",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(gateway_requests_total[1m]))",
          "legendFormat": "rps",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "5xx error rate",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(gateway_requests_total{status=~\"5..\"}[1m]))",
          "legendFormat": "5xx rps",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Request latency p95 (s)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(gateway_request_latency_seconds_bucket[5m])))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Upstream latency p95 (s)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (upstream, le) (rate(gateway_upstream_latency_seconds_bucket[5m])))",
          "legendFormat": "{{upstream}}",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Upstream errors",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (upstream) (rate(gateway_upstream_requests_total{status=\"error\"}[1m]))",
          "legendFormat": "{{upstream}}",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Rate limited requests",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(gateway_rate_limited_total[1m]))",
          "legendFormat": "rate limited rps",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Circuit open",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (upstream) (rate(gateway_circuit_open_total[1m]))",
          "legendFormat": "{{upstream}}",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Fallback usage",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (from_model, to_model) (rate(gateway_fallback_used_total[1m]))",
          "legendFormat": "{{from_model}} -> {{to_model}}",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "In-flight requests",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "gateway_in_flight_requests",
          "legendFormat": "in flight",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 32 }
    }
  ]
}
